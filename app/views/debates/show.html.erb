                          <% else %>
                            <span id="rated" style="display: none;"><i>You Rated <strong class="rate_count"></strong> Stars.</i></span>
                          <% end %>
                        <% end %>
                      </div></b>
                    </div>
                    <div class="devider-line"></div>
                  </div>
                <% end %>
              <% end %>
              <%= render 'arguments/form', debate: @debate, argument: Argument.new, argument_type: 'Neutral' %>
            </div>
          </div>

        </div>
        <div class="col-sm-4">
          <div class="panel panel-default mt-3 margin-top-10 padding-tb-10" style="margin-top: 7px;margin-left: -30px; border-right: black solid 4px;">
            <div class="panel-heading text-center">
              <i class="fa fa-thumbs-down" title="Argument Against" style="font-size: 28px" aria-hidden="true"></i>
            </div>
