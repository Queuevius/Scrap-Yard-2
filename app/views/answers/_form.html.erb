<%= form_with model: [question, answer] do |form| %>
  <ul class="nav navbar-nav text-center nav-search" style="width: 80%;">
    <%= form.text_field :text, class: 'form-control', placeholder: 'Add New Answer', required: true %>
  </ul>
  <ul class="nav navbar-nav text-center nav-search">
    <%= form.submit 'Add' , class: 'btn btn-primary' %>
  </ul>
<% end %>