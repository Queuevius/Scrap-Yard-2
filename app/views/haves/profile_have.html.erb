<div class="container-fluid">
  <div class="col-md-12 notes-box">
    <div class="row show-header-b text-center">
      <h1>
        <%= @have.title %>
      </h1>
    </div>
    <div class="row show-box-b">
      <div class="col-md-4">
        <p><b>Price: <%= @have.price %></b></p>
      </div>
      <div class="col-md-2 col-md-offset-6">
        <p><b><%= @have.user.first_name %> <%= @have.user.last_name %></b></p>
      </div>
    </div>
    <div class="row show-box">
      <%= @have.description %>
    </div>
    <div class="row show-box">
      <% @have.have_attachments.each do |f| %>
        <%= image_tag(f.image, {:style => "max-width: 40%", :class => "profile-pic text-center"}) %>
      <% end %>
    </div>
    <div class="row box-link-row">
      <div class="box-links-2 col-md-1">
        <%= link_to "Back", hafe_path(@have.user_id), class: "b2" %>
      </div>
      <div class="box-links-2 col-md-1">
        <% if current_user.id == @have.user_id %>
          <%= link_to "Edit", edit_hafe_path(@have), class: "b2" %>
        <% end %>
      </div>
      <div class="box-links-2 col-md-1">
        <% if current_user.id == @have.user_id %>
          <%= link_to 'Destroy', hafe_path(@have),
                      method: :delete, data: { confirm: 'Are you sure?' }, class: "b2" %>
        <% end %>
      </div>
      <div class="box-links-2 col-md-3 col-md-offset-6 text-right">
        <b><span><i class="glyphicon glyphicon-calendar glyph-padding"></i> <%= @have.created_at.strftime("%I:%M %p, %m/%d/%Y") %> </span></b>
      </div>
    </div>
  </div>
</div>