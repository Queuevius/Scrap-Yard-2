

<div class="panel panel-default devise-bs area-form-cont">
  <div class="col-md-10 col-md-offset-1">
    <div class="show-header">
      <h1>Create an Area</h1>
    </div>
    <div class="panel-body area-form-body">
      <%= bootstrap_form_for(@ep,
                   url: area_path(@ep),
                   html: { method: :put }) do |f| %>

        <div class="form-group required">
          <%= f.text_field :name, label: "Area Name", autofocus: true, class: "form-control", placeholder: "Please specify a name to the Layer you are adding." %>
        </div>

        <div class="form-group">
          <%= f.text_area :tag_body, label: "Describe the area more"%>
        </div>

        <%= f.submit "Save", class: "btn btn-success" %>
        <a href="<%= area_path @ep %>" data-turbolinks='false' }><button class="btn btn-danger">Cancel</button></a>


      <% end %>

    </div>
  </div>

</div>