 <div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <div class="col-md-11 text-left pt-2">
        <h4 class="modal-title" id="mySmallModalLabel">Create <%= model.titleize.singularize %></h4>
      </div>
      <div class="col-md-1 text-right pt-2 pr-0">
        <button type="button" class="btn btn-light close float-left" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
      </div>
    </div>
    <div class="modal-body">
      <div class="panel-body">
        <%= form_for object, url: notes_path do |form| %>
          <%= hidden_field_tag :object_type, id: "sub_string_#{form_id}" %>
          <%= render "#{model}/form_fields", form: form, object: post_or_tag_object %>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <button type="button" aria-hidden="true" id="<%= form_id %>" class="btn btn-primary">Create</button>
                <%#= form.submit "Create", onclick: "submitForm(e)", class: "btn btn-primary" %>
              </div>
            </div>
            <div class="col-md-6 text-right float-rigth">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

 <script>
     <% body = post_or_tag_object.is_a?(Post) ? post_or_tag_object.post_body : post_or_tag_object.tag_body %>
     $('#note_form').click( function() {
         $form = $('#new_note');
         formData = $form.serialize();
         $.ajax({
             type: "POST",
             dataType: "json",
             url: '/notes',
             data: formData,
             success: function (data) {
                 location.reload(true);
             }
         });
     });

