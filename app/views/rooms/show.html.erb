<div class="container-flex search-index-box">
  <div class="col-md-12">
    <div class="row">
      <div class="post-header col-md-9 col-md-offset-3">
        <h1>
          Private Messages
        </h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= render partial: 'rooms' %>
      </div>
      <div class="col-md-9 col-md-offset-1">
        <div class="chat-message-container-b" data-channel-subscribe="room" data-room-id="<%= @room.id %>">
          <% @messages.each do |r| %>
            <div class="col-md-12 chat-message-container">
              <div class="row message-user">
                <p>
                  <b>
                    <%= r.user.first_name %> <%= r.user.last_name %>
                  </b>
                </p>
              </div>
              <div class="row message-body">
                <%= r.message %>
              </div>
              <div class="row message-date text-right">
                <small>
                  <%= r.created_at %>
                </small>
                </div>
            </div>
          <% end %>
          </div>
            <%= simple_form_for @message, remote: true do |form| %>
              <div class="input-group mb-3">
                <%= form.input :message, as: :string,
                               wrapper: false,
                               label: false,
                               input_html: {
                                   class: 'chat-input'
                               } %>
                <div class="input-group-append">
                  <%= form.submit "Send", class: 'btn btn-primary chat-input' %>
                </div>
              </div>

              <%= form.input :room_id, as: :hidden %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

