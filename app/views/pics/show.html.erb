<div class="container-fluid">
  <div class="col-md-12 notes-box">
    <div class="row post-header-b">
      <div class="col-md-10">
        <h1>
          My Pictures
        </h1>
      </div>
      <div class="col-md-2">
        <% if @user.id == current_user.id %>
          <%= link_to "new picture", new_pic_path, class: "b7" %>
        <% end %>
      </div>
    </div>
    <div>
      <% @pic.in_groups_of(3, false).each do |group| %>
        <div class='row'>
          <% group.each do |p| %>
            <div class='col-md-3 note-box'>
              <% if p.user_id == @user.id %>
                <h3 class="text-center">
                  <%= link_to p.name, solo_pic_path(p), class: "pic-link" %>
                </h3>
                <p class="text-center">
                  <%= truncate(p.description, length: 50) %>
                </p>
                <p class="text-center">
                  <%= image_tag(p.image, {:style => "width:175px;", :class => "profile-pic text-center"}) %>
                </p>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>


